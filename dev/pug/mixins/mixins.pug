mixin list-links (...items)
	ul
		each item in items
			li
				a(href="")= item
mixin list (...items)
	ul
		each item in items
			li= item
mixin custom-checkbox(text)
	label.custom-checkbox
		input.custom-checkbox__checkbox(type="checkbox" name="")
		span.custom-checkbox__span
		span.custom-checkbox__label Согласен с <a href="">правилами участия</a> в акции
		
mixin custom-checkbox-agree(text)
	label.custom-checkbox
		input.custom-checkbox__checkbox(type="checkbox" name="")
		span.custom-checkbox__span
		span.custom-checkbox__label Я прочитал и принимаю условия <a href="">Политики конфиденциальности</a> и <a href="">Правил обработки персональных данных</a>

mixin svg(name)
	svg&attributes(attributes)
		use(xlink:href=`./img/sprite.svg#${name}`)

mixin catalog-item(imgsrc, name, preview)
	.catalog-item 
		a.catalog-item__img(href="" style='background-image:url(./img/' + imgsrc +')')
		.catalog-item__desc
			a.catalog-item__name(href="")= name
			.catalog-item__preview= preview
			.catalog-item__info 
				.catalog-item__price 180 ₽
				.catalog-item__for за 100 гр.
				a.button.button-order(href="") + В корзину
